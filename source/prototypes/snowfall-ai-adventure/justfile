# -----------------------------------------------------------------------------
# help
# -----------------------------------------------------------------------------

help:
    @just --list --unsorted

# -----------------------------------------------------------------------------
# ensure
# -----------------------------------------------------------------------------

# idempotent task to ensure all dependencies are installed
ensure:

# -----------------------------------------------------------------------------
# build
# -----------------------------------------------------------------------------

# build the project
build:
    cargo build

# rebuild the project on every source change
build-watch:
    cargo watch -x build

# -----------------------------------------------------------------------------
# dev
# -----------------------------------------------------------------------------

# run in development mode
dev:
    RUST_BACKTRACE=full cargo run

dev-watch:
    cargo watch -x run

# -----------------------------------------------------------------------------
# run
# -----------------------------------------------------------------------------

# run in release mode
run:
    cargo run --release

# -----------------------------------------------------------------------------
# fmt
# -----------------------------------------------------------------------------

# format the code
fmt:
    cargo fmt

# -----------------------------------------------------------------------------
# test
# -----------------------------------------------------------------------------

# run the tests
test:
    cargo test

# -----------------------------------------------------------------------------
# run
# -----------------------------------------------------------------------------

# run the benchmarks
benchmark: